<Page x:Class="laba1.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:laba1.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Авторизация">

    <Grid RenderTransformOrigin="0.5,0.5">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal">
                <TextBlock Style="{StaticResource BlockCommon}" Text="Логин:" Height="39" Width="107"></TextBlock>
                <TextBox x:Name="TBoxLogin" Width="75" Height="30"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Пароль:" Style="{StaticResource BlockCommon}" Width="110" Height="35"/>
                <PasswordBox x:Name="PBoxPassword" Width="74" Height="30"/>
            </StackPanel>
            <Button Name="BtnLogin" Click="BtnLogin_Click" Content="Войти"
                    HorizontalAlignment="Right"></Button>
        </StackPanel>
    </Grid>
</Page>
